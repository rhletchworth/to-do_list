<div class="row">
	<div class="col-md-7">
		<h2>To Do:</h2>
			<ul>
			    <div id="tasks">    
			        <%= render @tasks %>
			    </div>
			</ul>
		<br>
	</div>
	<div class="col-md-5">
		<br/> 
			<%= link_to new_task_path, remote: true do %>
				<button class="btn btn-default"><span class="glyphicon glyphicon-plus"></span>Add a Task</button>
			<% end %>
			<div id="task-form" style="display:none;"></div>
	</div>
</div>
